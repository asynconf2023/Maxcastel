{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

<main id="page-voituresType-admin">

    {# <h1>Types de voitures</h1> #}

    <div class="text-center mt-4 titre-et-btn-new">
        <h1 class="titre-h1">Types de voitures</h1>
        <a class="text-decoration-none text-dark" href="{{ path('voitureType_new') }}"><i class="mb-3 fa-solid fa-plus"></i>Créer un type de voiture</a>
    </div>

    <table class="table table-striped table-hover container">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Kilomètres par an</th>
                <th>Note eco</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            {% for voitureType in voituresType %}
            {# {{ dump(voitureType) }} #}
            <tr>
                <td class="py-4"><a href="{{ path('voitureType_show', { 'id': voitureType.id }) }}" class="text-decoration-none text-dark">{{ voitureType.nom }}</a></td>
                <td class="py-4"><a href="{{ path('voitureType_show', { 'id': voitureType.id }) }}" class="text-decoration-none text-dark">{{ voitureType.minKg }}-{{ voitureType.maxKg }}Kkm</a></td>
                <td class="py-4"><a href="{{ path('voitureType_show', { 'id': voitureType.id }) }}" class="text-decoration-none text-dark">{{ voitureType.noteEco }}</a></td>
                <td class="py-4">
                    <ul class="list-unstyled d-flex flex-row mb-0"> 
                        <li><a class="" href="{{ path('voitureType_show', { 'id': voitureType.id }) }}"><i class="fa-solid fa-eye"></i></a></li>
                        <li class="mx-3"><a class="" href="{{ path('voitureType_edit', { 'id': voitureType.id }) }}"><i class="fa-solid fa-pen-to-square"></i></a></li>
                        <li><a class="" href="{{ path('voitureType_delete', { 'id': voitureType.id }) }}"><i class="fa-solid fa-trash"></i></a></li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</main>

{% endblock %}
